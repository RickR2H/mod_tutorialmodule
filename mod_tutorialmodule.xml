<extension type="module" version="3.0" client="administrator" method="upgrade">
	<name>mod_tutorialmodule</name>
	<author>Rick Spaan</author>
	<creationDate>February 2016</creationDate>
	<copyright>Copyright (c) 2016 r2h. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>rick@r2h.nl</authorEmail>
	<authorUrl>http://www.r2h.nl</authorUrl>
	<version>1.0.0</version>
	<description>MOD_TUTORIALMODULE_INSTALLATION</description>

	<files>
		<filename module="mod_tutorialmodule">mod_tutorialmodule.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

	<media folder="media" destination="mod_tutorialmodule">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>index.html</filename>
	</media>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_tutorialmodule.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_tutorialmodule.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
                <field name="componenttype" type="list" default="always" label="Visible on" description="">
                    <option value="always">always</option>
                    <option value="com_cpanel">com_cpanel</option>
                    <option value="com_config">com_config</option>
                    <option value="com_checkin">com_checkin</option>
                    <option value="com_cache">com_cache</option>
                    <option value="com_users">com_users</option>
                    <option value="com_menus">com_menus</option>
                    <option value="com_content">com_content</option>
                    <option value="com_categories">com_categories</option>
                    <option value="com_banners">com_banners</option>
                    <option value="com_contact">com_contact</option>
                    <option value="com_joomlaupdate">com_joomlaupdate</option>
                    <option value="com_messages">com_messages</option>
                    <option value="com_newsfeeds">com_newsfeeds</option>
                    <option value="com_postinstall">com_postinstall</option>
                    <option value="com_redirect">com_redirect</option>
                    <option value="com_search">com_search</option>
                    <option value="com_finder">com_finder</option>
                    <option value="com_tags">com_tags</option>
                    <option value="com_installer">com_installer</option>
                    <option value="com_modules">com_modules</option>
                    <option value="com_templates">com_templates</option>
                    <option value="com_languages">com_languages</option>
                    <option value="1">Option 2</option>
                </field>

			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>